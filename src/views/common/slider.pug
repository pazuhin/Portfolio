script(type="text/x-template")#slider
    .slider
        info(
            :work="currentWork"
        )
        display(
            :work="currentWork"
        )
        buttons(
            :works="works"
            :currentIndex = "currentIndex"
            @slide="handleSlide"
        )

script(type="text/x-template")#slider-info
    .slider__info-container
        .slider__about
            .slider__info
                .slider__info-title
                    .subtitle {{work.title}}
                transition-group(
                    appear
                    :css="false"
                    @before-enter="callback('before-enter')"
                    @after-enter="callback('after-enter')"
                    @enter="enterHandler"
                )
                    .slider__info-skills(:key="work.skills") {{work.skills}}
                .slider__info-button
                    a(:href="work.link" target="_blank").button Посмотреть сайт

script(type="text/x-template")#slider-display
    .slider-display
        img(:src="work.photo" title="big-pic").slider__big-pic

script(type="text/x-template")#slider-buttons
    .slider-buttons
        .slider-button(@click="slide('prev')")
            transition-group(name="slide-down" tag="div").slider__button-img-container
                .slider__button-img-wrap(:key="getReqImage('prev').photo")
                    img(:src="getReqImage('prev').photo" title="ioga").slider__button-pic
        .slider-button.slider-button--next(@click="slide('next')")
            transition-group(name="slide-up" tag="div").slider__button-img-container
                .slider__button-img-wrap(:key="getReqImage('next').photo")
                    img(:src="getReqImage('next').photo" title="int").slider__button-pic

