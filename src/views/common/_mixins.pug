mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xlink:href=`/assets/images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`/assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin nav(className, items)
  nav(class=`${className}`)
     ul(class=`${className}__list`)
         each item in items
            li(class=`${className}__item`)
                a(class=`${className}__link` href='#')= item


mixin sign(className)
    .sign © Смирнов Андрей | создано с любовью в LoftSchool | 2018

mixin auth_btn(className)
    .auth_btn
        a(class=`${className}__link` href="#") Авторизоваться

