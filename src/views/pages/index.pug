extends ../auth.layout.pug

block content
    .intro
        .intro__main
            .intro__block
                .flip
                    .intro__font
                        .intro__content
                            .intro__image
                            .intro__about
                                .intro__name Андрей Смирнов
                                .intro__desk Личный сайт веб разработчикa
                            include ../../sections/socials
                        +nav('nav', [['Мои работы', 'works.html'],['Обо мне', 'about.html'], ['Блог', 'blog.html']])
                    .intro__back
                        form.form-welcome
                            .form-welcome__title Авторизуйтесь
                        .form__container
                            #auth-component
                                nav.nav
                                    ul.nav__list
                                        li.nav__item
                                            a(href="index.html" id="auth" class="nav__link") На главную
                                        li.nav__item
                                            button(@click="login" type="submit" class="nav__link" value="Отправить") Войти
            .sign(class="welcome__sign") © Смирнов Андрей | создано с любовью в LoftSchool | 2018
            +auth_btn('auth_btn')


