extends ../main.layout.pug

block variables
    - var title = 'Мои работы'

block scripts
    script(src='works.bundle.js')

block content
    section.hero.hero_works
        .container.container_hero
            -
                var socials = [
                ['vk', 'https://vk.com'],
                ['github', 'https://gh.com'],
                ['in', 'https://in.com']
                ]
            ul.socials.hero__links
                each item in socials
                    li.socials__item
                        a(href=`${item[1]}`).socials__link
                            +icon(item[0], 'socials__link-icon')
            a(href="#").humb.hero__menu
                .hero__menu-btn

            .hero__user.hero__user_about
                .intro__content
                    .intro__image
                    .intro__about
                        .intro__name Андрей Смирнов
                        .intro__desk Личный сайт веб разработчикa
            .down-btn
                a(href="#").down-btn__link
                    +icon('arrow_down','down-btn__img')

    section.works
        .works__title Мои работы
        .works__content
            .works__left
                .works__triangle
                    svg(viewBox="0 0 500 100" preserveAspectRatio="none").triangle.triangle_fill_left
                        <polygon points="0 0, 500 100, 0 100"/> fill="#DDF5FF"/>
                .school
                    .school__title Сайт школы онлайн образования
                    .school__stack HTML, CSS, JAVASCRIPT
                    .school__link
                        a(href='#' class="school__link-site") Посмотреть сайт
            .works__right
                .works__triangle
                    svg(viewBox="0 0 500 100").triangle.triangle_fill_right
                        <polygon points="500 0, 500 100, 0 100"/> fill="#DDF5FF"/>

