extends ../main.layout.pug

block variables
    - var title = 'Блог'

block scripts
    script(src='blog.bundle.js')

block content
    section.hero.hero_blog
        .container.container_hero
            -
                var socials = [
                ['vk', 'https://vk.com'],
                ['github', 'https://gh.com'],
                ['in', 'https://in.com']
                ]
            ul.socials.hero__links
                each item in socials
                    li.socials__item
                        a(href=`${item[1]}`).socials__link
                            +icon(item[0], 'socials__link-icon')
            a(href="#").humb.hero__menu
                .hero__menu-btn

            .hero__user.hero__user_blog
                .intro__content-blog
                    .intro__image
                    .intro__blog
                        .intro__title Блог
                        .intro__desk Статьи, которые я написал
    section.blog
        .container.container_blog
            .blog__triangle-left
            .blog__triangle-right
            .blog__left
                aside.sidebar
                    +nav('nav-blog', ["Самое важное в SASS","Приемы в вёрстке, без которых не обходится ни один сайт", "Самый необходимый набор Gulp плагинов", "Почему я выбрал Pug"], 0)
            .blog__right
                ul.blog-content__list
                    li.blog-content__item
                        .blog-content__lilte Самое важное в SASS
